{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
       "url": "https://raw.githubusercontent.com/iy20505/iy20505.github.io/main/task2_excel.csv",
       "format": {
           "type":"csv",
           "property": "Year"}},
    "transform": [
        {"calculate": "datum.Totals/1000000000", "as": "billions"}
        ],


    "title": {
        "text": "IMF Credit Outstanding",
        "subtitle": "in SDRs for all members 1984-2022 ($b). Source: IMF",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    "width":300,
    "height":300,

    "mark":{
        "type": "bar",
        "color":"seagreen",
        "strokeWidth":2,
        "opacity":1},
 

    "encoding": {
      "x": {
          "field": "Year",
          "type": "temporal",
          "title":null},
      "y": {
          "field": "billions",

          "type": "quantitative",
          "title":null}
    }
}
