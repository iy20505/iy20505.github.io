{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


    "title": {
        "text": "IMF Credit Outstanding",
        "subtitle": "in SDRs for all members 1984-2022 ($b). Source: IMF",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

      "data": {
       "url": "https://raw.githubusercontent.com/iy20505/iy20505.github.io/main/w2_excel1.csv",
       "format": {
           "type":"csv",
           "property": "Year"}},
    "transform": [
        {"calculate": "datum.Totals/1000000000", "as": "billions"}
        ],
    
    "width":250,
    "height":250,

    "mark":{
        "type": "bar",
        "color":"seagreen",
        "strokeWidth":2,
        "opacity":1},
 

    "encoding": {
      "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "title":null},
            "grid": false, 
            "ticks": false, 
            "labelAngle": 45}}
      "y": {
          "field": "billions",
          "type": "quantitative",
          "title": "",
          "axis": {"grid": false}}
    }
}
